      //- // end::Card header
      // begin::Card body
      .card-body
        .row.justify-content-center
          .col-lg-8
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 圖片
              .col-lg-9
                .image-input.image-input-outline#kt_image_1
                  .image-input-wrapper(style='background-image: url(assets/media/users/100_1.jpg)')
