extends ../layout/main

block variables
  - var page = 'order';
  - var title = '訂單資料';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'index-page';

block content
  // begin::Container
  #kt_content_container.container-xxl
    // begin::Table
    .card.card-custom.mt-6.mt-xl-9
      // begin::Card header
      .card-header.border-0
        //- .card-title
        //-   h3.card-label Basic Demo
        .card-toolbar.ml-auto
          a.btn.btn-light-primary(href='#') 返回訂單
      //- // begin::Card header
      //- .card-header.mt-5.border-0
      //-   // begin::Card title
      //-   .card-title.flex-column
      //-     h3.fw-bolder.mb-1 #{title}
      //-     //- .fs-6.text-gray-400 Total $260,300 sepnt so far
      //- // end::Card header
      // begin::Card body
      .card-body
        .row.justify-content-center
          .col-lg-8
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 日期
              .col-lg-9
                input.form-control.form-control-solid.datepicker.w-100(type='text', readonly, placeholder="Select date")
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 訂單編號
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='155', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 圖片
              .col-lg-9
                .image-input.image-input-outline#kt_image_1
                  .image-input-wrapper(style='background-image: url(assets/media/users/100_1.jpg)')
                  label.btn.btn-xs.btn-icon.btn-circle.btn-white.btn-hover-text-primary.btn-shadow(data-action='change', data-toggle='tooltip', data-original-title='Change avatar')
                    i.fa.fa-pen.icon-sm.text-muted
                    input(type='file', name='profile_avatar', accept='.png, .jpg, .jpeg')
                    input(type='hidden', name='profile_avatar_remove')
                  span.btn.btn-xs.btn-icon.btn-circle.btn-white.btn-hover-text-primary.btn-shadow(data-action='cancel', data-toggle='tooltip', title='Cancel avatar')
                    i.ki.ki-bold-close.icon-xs.text-muted
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 連結
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='admin', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 商品金額(人民幣)
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='100', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 商品金額(越南盾)
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='100', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 數量
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='Alex', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 重量
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='男', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 物流類型
              .col-lg-9
                select.form-control.form-control-solid
                  option(value="") 1~2天
                  option(value="") 3~4天
                  option(value="") 5~6天
                  option(value="") 10~14天
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 木架
              .col-lg-9
                select.form-control.form-control-solid
                  option(value="") 是
                  option(value="") 否
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 木架費用
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='123')
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 貴重商品
              .col-lg-9
                select.form-control.form-control-solid
                  option(value="") 有保險
                  option(value="") 無保險
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 保險費用
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='123')
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 備註
              .col-lg-9
                textarea.form-control.form-control-solid(rows='5')
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 總金額
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='123')


block script
  scrupt(src="/assets/js/pages/crud/forms/widgets/form-repeater.js")
  script.
    $('#kt_repeater_3').repeater({
      initEmpty: false,

      defaultValues: {
          'text-input': '123'
      },

      show: function() {
          $(this).slideDown();
      },

      hide: function(deleteElement) {
          if(confirm('Are you sure you want to delete this element?')) {
              $(this).slideUp(deleteElement);
          }
      }
    });
    $('.datepicker').datepicker({
      todayHighlight: true,
      orientation: "bottom left",
      format: "yyyy/mm/dd",
    });