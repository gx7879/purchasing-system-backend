block variables

// begin::Header
#kt_header.header.header-fixed
  // begin::Container
  .container.d-flex.align-items-stretch.justify-content-between
    // begin::Left
    .d-flex.align-items-stretch.mr-3
      // begin::Header Logo
      .header-logo
        a(href='index.html')
          img.logo-default.max-h-40px(alt='Logo', src='assets/media/logos/logo-letter-9.png')
          img.logo-sticky.max-h-40px(alt='Logo', src='assets/media/logos/logo-letter-1.png')
      // end::Header Logo
      // begin::Header Menu Wrapper
      .header-menu-wrapper.header-menu-wrapper-left#kt_header_menu_wrapper
        // begin::Header Menu
        #kt_header_menu.header-menu.header-menu-left.header-menu-mobile.header-menu-layout-default
          // begin::Header Nav
          ul.menu-nav
            li.menu-item(class={'menu-item-here': page === 'index'})
              a.menu-link.menu-toggle(href='/')
                span.menu-text 首頁
                i.menu-arrow
            li.menu-item(class={'menu-item-here': page === 'add-product'})
              a.menu-link(href='/add-product.html')
                span.menu-text 新增商品
                i.menu-arrow
            li.menu-item(class={'menu-item-here': page === 'order-management'})
              a.menu-link(href='/order-management.html')
                span.menu-text 訂單管理
                i.menu-arrow
          // end::Header Nav
        // end::Header Menu
      // end::Header Menu Wrapper
    // end::Left
    // begin::Topbar
    .topbar
      .topbar-item
        a.text-white.mr-2.btn.btn-hover-transparent-white.btn-lg.mr-1(href="/cart.html") 購物車
      // begin::Languages
      .dropdown
        // begin::Toggle
        .topbar-item(data-toggle='dropdown', data-offset='10px,0px')
          .btn.btn-icon.btn-hover-transparent-white.btn-dropdown.btn-lg.mr-1
            img.h-20px.w-20px.rounded-sm(src='assets/media/svg/flags/226-united-states.svg', alt)
        // end::Toggle
        // begin::Dropdown
        .dropdown-menu.p-0.m-0.dropdown-menu-anim-up.dropdown-menu-sm.dropdown-menu-right
          include ../partials/_extras/dropdown/languages
        // end::Dropdown
      // end::Languages
      // begin::User
      .dropdown
        // begin::Toggle
        .topbar-item(data-toggle='dropdown', data-offset='10px,0px')
          .btn.btn-icon.btn-hover-transparent-white.d-flex.align-items-center.btn-lg.px-md-2.w-md-auto#kt_quick_user_toggle
            span.text-white.opacity-70.font-weight-bold.font-size-base.d-none.d-md-inline.mr-1 Hi,
            span.text-white.opacity-90.font-weight-bolder.font-size-base.d-none.d-md-inline.mr-4 Sean
            span.symbol.symbol-35
              span.symbol-label.text-white.font-size-h5.font-weight-bold.bg-white-o-30 S
        // begin::Dropdown
        .dropdown-menu.p-0.m-0.dropdown-menu-anim-up.dropdown-menu-sm.dropdown-menu-right
          include ../partials/_extras/dropdown/user
        // end::Dropdown
        // end::Toggle
      // end::User
    // end::Topbar
  // end::Container
// end::Header